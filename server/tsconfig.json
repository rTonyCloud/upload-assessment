{
	"include": ["server/**/*", "types/**/*", "global.d.ts"],
	"compilerOptions": {
		"incremental": true,
		"target": "es2021",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": ".",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		/* Strict Type-Checking Options */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
	},
	"exports": {
		".": {
			"require": "./server.ts",
			"import": "./server.ts",
		},
	},
}
