{
	"include": ["server/**/*", "types/**/*", "global.d.ts"],
	"compilerOptions": {
		"incremental": true,
		"target": "es2021",
		"module": "commonjs",
		"lib": ["es2021", "dom"],
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
	},
}
